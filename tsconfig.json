{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@stats-db/*": [
        "packages/stats-db/src/*"
      ],
      "@data-vis/*": [
        "packages/data-vis/src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    {
      "path": "packages/stats-db"
    },
    {
      "path": "packages/data-vis"
    }
  ]
}